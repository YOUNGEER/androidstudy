<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <com.wy.younger.canvas.CanvasDrawView
                android:background="#a0e"
                android:layout_width="match_parent"
                android:layout_height="900dp"/>

        <com.wy.younger.canvas.CanvasTranslation
                android:background="#f8f"
                android:layout_width="match_parent"
                android:layout_height="900dp"/>
        <com.wy.younger.canvas.CanvasClip
                android:background="#88f"
                android:layout_width="match_parent"
                android:layout_height="400dp"/>
        <com.wy.younger.canvas.CanvasMatrix
                android:background="#888"
                android:layout_width="match_parent"
                android:layout_height="900dp"/>
        <com.wy.younger.canvas.CanvasCamera
                android:background="#f90"
                android:layout_width="match_parent"
                android:layout_height="900dp"/>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>